<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp"
    android:id="@+id/constrainlayout_userlist_item"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageView_userlist_imageuser" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_userlist_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView_userlist_imageuser"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        android:id="@+id/textView_userlist_nameuser" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_userlist_email"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_userlist_nameuser"
        app:layout_constraintLeft_toRightOf="@+id/imageView_userlist_imageuser"
        android:layout_marginLeft="30dp"
        android:id="@+id/textView_userlist_emailuser" />


</android.support.constraint.ConstraintLayout>